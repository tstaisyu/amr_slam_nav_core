<?xml version="1.0"?>
<robot name="n1_diff_drive">
  <!-- Base Link -->
  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.3 0.3 0.10"/>
      </geometry>
    </visual>
  </link>

  <link name="base_footprint">
    <visual>
      <geometry>
        <box size="0.3 0.3 0.10" />
      </geometry>
    </visual>
  </link>

  <joint name="base_footprint_to_base_link" type="fixed">
    <parent link="base_link"/>
    <child link="base_footprint"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

  <!-- Left Wheel -->
  <link name="left_wheel">
    <visual>
      <geometry>
        <cylinder length="0.042" radius="0.055"/>
      </geometry>
    </visual>
  </link>

  <!-- Right Wheel -->
  <link name="right_wheel">
    <visual>
      <geometry>
        <cylinder length="0.042" radius="0.055"/>
      </geometry>
    </visual>
  </link>

  <!-- Joints -->
  <joint name="left_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="left_wheel"/>
    <origin xyz="0 -0.15 0.055" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <joint name="right_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="right_wheel"/>
    <origin xyz="0 0.15 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <!-- IMUリンクの定義 -->
  <link name="imu_link">
    <visual>
      <geometry>
        <box size="0.054 0.054 0.0189"/> <!-- サイズは適宜調整 -->
      </geometry>
      <material name="grey">
        <color rgba="0.5 0.5 0.5 1.0"/>
      </material>
    </visual>
    <inertial>
      <mass value="0.0492"/> <!-- 質量は適宜調整 -->
      <inertia 
        ixx="0.001" ixy="0.0" ixz="0.0"
        iyy="0.001" iyz="0.0"
        izz="0.001"/>
    </inertial>
  </link>

  <!-- base_linkとimu_linkを固定ジョイントで接続 -->
  <joint name="base_to_imu" type="fixed">
    <parent link="base_link"/>
    <child link="imu_link"/>
    <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
  </joint>

  <!-- LiDARのリンク定義 -->
  <link name="laser_link">
    <visual>
      <origin xyz="0 0 -0.0105" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.038" length="0.07"/>
      </geometry>
      <material name="silver"/>
    </visual>
  </link>

  <!-- LiDARをbase_linkに固定するジョイント定義 -->
  <joint name="base_to_laser" type="fixed">
    <parent link="base_link"/>
    <child link="laser_link"/>
    <origin xyz="0.092 0 0.151" rpy="0 0 0"/>
  </joint>

  <!-- ros2_control configuration 
  <ros2_control name="DiffDriveSystem" type="system">
    <hardware>
      <plugin>ros2_control_demo_hardware/RRBotSystemPositionOnlyHardware</plugin>
    </hardware>
    <joint name="left_wheel_joint">
      <interface name="velocity"/>
      <interface name="position"/>
    </joint>
    <joint name="right_wheel_joint">
      <interface name="velocity"/>
      <interface name="position"/>
    </joint>
  </ros2_control>
  -->
</robot>
