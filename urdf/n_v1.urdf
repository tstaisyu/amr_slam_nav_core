<?xml version="1.0"?>
<robot name="n1_diff_drive">

  <!-- Base link definition -->
  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.3 0.3 0.10"/>
      </geometry>
    </visual>
  </link>

  <!-- Base footprint link -->
  <link name="base_footprint">
    <visual>
      <geometry>
        <box size="0.3 0.3 0.10" />
      </geometry>
    </visual>
  </link>

  <!-- Fixed joint between base_link and base_footprint -->
  <joint name="base_footprint_to_base_link" type="fixed">
    <parent link="base_link"/>
    <child link="base_footprint"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

  <!-- Left Wheel link -->
  <link name="left_wheel">
    <visual>
      <geometry>
        <cylinder length="0.042" radius="0.055"/>
      </geometry>
    </visual>
  </link>

  <!-- Right Wheel link -->
  <link name="right_wheel">
    <visual>
      <geometry>
        <cylinder length="0.042" radius="0.055"/>
      </geometry>
    </visual>
  </link>

  <!-- Continuous joint for left wheel -->
  <joint name="left_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="left_wheel"/>
    <origin xyz="0 -0.15 0.055" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <!-- Continuous joint for right wheel -->
  <joint name="right_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="right_wheel"/>
    <origin xyz="0 0.15 0.055" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <!-- IMU link definition -->
  <link name="imu_link">
    <visual>
      <geometry>
        <box size="0.054 0.054 0.0189"/> <!-- Adjust size as needed -->
      </geometry>
      <material name="grey">
        <color rgba="0.5 0.5 0.5 1.0"/>
      </material>
    </visual>
    <inertial>
      <mass value="0.0492"/> <!-- Adjust mass as needed -->
      <inertia 
        ixx="0.001" ixy="0.0" ixz="0.0"
        iyy="0.001" iyz="0.0"
        izz="0.001"/>
    </inertial>
  </link>

  <!-- Fixed joint between base_link and imu_link -->
  <joint name="base_to_imu" type="fixed">
    <parent link="base_link"/>
    <child link="imu_link"/>
    <origin xyz="-0.045 0.105 0.10" rpy="0.0 0.0 -1.57079"/>
  </joint>

  <!-- LiDAR link definition -->
  <link name="laser_link">
    <visual>
      <origin xyz="0 0 -0.0105" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.038" length="0.07"/>
      </geometry>
      <material name="silver"/>
    </visual>
  </link>

  <!-- Fixed joint between base_link and laser_link -->
  <joint name="base_to_laser" type="fixed">
    <parent link="base_link"/>
    <child link="laser_link"/>
    <origin xyz="0.092 0 0.151" rpy="0 0 0"/>
  </joint>

</robot>
